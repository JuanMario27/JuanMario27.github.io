---
import type {CollectionEntry} from 'astro:content';
type Props = CollectionEntry<'blog'>['data'];
import {Image} from '@astrojs/image/components';
const {title, author, pubDate, heroImage, description, url} = Astro.props;
const date = new Date(pubDate).toLocaleString('es-CO').split(',')[0];
---

<article>
  <a
    href={`/blog/${url}/`}
    class="block relative before:bg-gray-500 before:w-full before:h-full before:absolute before:top-0 before:left-0 before:opacity-0 before:ease-in hover:before:opacity-40 duration-700">
    {
      heroImage && (
        <Image
          src={heroImage}
          format="avif"
          height={220}
          width={440}
          aspectRatio={2.0}
          alt={title}
          class="overflow-hidden object-cover object-center w-auto"
          style={`view-transition-name: ${url}`}
        />
      )
    }
  </a>
  <div class="bg-white p-6 border-gray-200 border-1">
    <a href={`/blog/${url}/`}>
      <h3
        class="font-vietnam_pro font-bold uppercase mb-2 text-gray-700 text-xl hover:text-darkblue-200 cursor-pointer transition hover:ease-in duration-700">
        {title}
      </h3>
    </a>
    <p class="flex flex-row mb-4">
      <span class="font-vietnam_pro text-gray-600">{author}</span>
      &nbsp&nbsp;-&nbsp&nbsp;
      <date class="font-vietnam_pro text-gray-600">{date}</date>
    </p>
    <p class="font-vietnam_pro text-sm text-gray-600">{description}</p>
  </div>
</article>
